@using MvcKutuphane.Models.Entity
@model List<TblKitap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Kitap Sayfası</h2>

@using (Html.BeginForm("Index", "Kitap", FormMethod.Get))
{
    <div style="margin-bottom:15px; margin-top:15px">
        <b>Aranacak Kitap Adını Girin: &nbsp;</b> @Html.TextBox("p")
    <input type="submit"  value="Ara" />
    </div>
}

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Kitap Adı</th>
        <th>Kitap Yazarı</th>
        <th>Kategori</th>
        <th>Basım Yılı</th>
        <th>Yayınevi</th>
        <th>Sayfa</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Ad</td>
            <td>@item.TblYazar.Ad&nbsp; @item.TblYazar.Soyad</td>
            <td>@item.TblKategori.AD</td>
            <td>@item.BasımYıl</td>
            <td>@item.YayınEvi</td>
            <td>@item.Sayfa</td>
            <td>@item.Durum</td>
            <td><a href="/Kitap/KitapSil/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Kitap/KitapGetir/@item.Id" class="btn btn-warning">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Kitap/KitapEkle" class="btn btn-primary">Yeni Kitap Ekle</a>

