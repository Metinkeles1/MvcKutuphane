@using MvcKutuphane.Models.Entity
@model List<TblHareket>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Ödünç Kitap Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>İşlem Id</th>
        <th>Kitap Adı</th>
        <th>Üye</th>
        <th>Personel</th>
        <th>Alış Tarihi</th>
        <th>İade Tarihi</th>
        <th>İade Al</th>        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.TblKitap.Ad</td>
            <td>@item.TblUyeler.Ad&nbsp; @item.TblUyeler.Soyad</td>
            <td>@item.TblPersonel.Personel</td>
            <td>@Convert.ToDateTime(item.AlisTarih).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(item.IadeTarih).ToString("dd/MM/yyyy")</td>            
            <td><a href="/Odunc/OduncIade/@item.Id" class="btn btn-default" style="background-color:#00ffff;">Kitabı İade Et</a></td>            
        </tr>
    }
</table>

