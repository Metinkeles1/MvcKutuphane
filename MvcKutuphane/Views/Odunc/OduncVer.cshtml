@model MvcKutuphane.Models.Entity.TblHareket
@{
    ViewBag.Title = "OduncVer";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>OduncVer</h2>

<form method="post" class="form-group">
    <div></div>
    <div style="margin-top:15px">
        <label>Üye ID</label>
        @*@Html.TextBoxFor(k => k.Uye, new { @class = "form-control" })*@
        @Html.DropDownListFor(k=>k.TblUyeler.Id, (List<SelectListItem>) ViewBag.uyeler, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap ID</label>
        @*@Html.TextBoxFor(k => k.Kitap, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TblKitap.Id, (List<SelectListItem>)ViewBag.kitaplar, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Personel ID</label>
        @*@Html.TextBoxFor(k => k.Personel, new { @class = "form-control" })*@
        @Html.DropDownListFor(k => k.TblPersonel.Id, (List<SelectListItem>)ViewBag.personeller, new { @class = "form-control" })
    </div>
    <div style="margin-top:15px">
        <label>Kitap Alış Tarihi</label>
        <input type="text" class="form-control" name="AlisTarih" value="@DateTime.Now.ToShortDateString()"/>
    </div>
    <div style="margin-top:15px">
        <label>Kitap İade Tarihi</label>
        <input type="text" class="form-control" name="IadeTarih" value="@DateTime.Now.AddDays(7).ToShortDateString()"/>
    </div>

    <div style="margin-top:15px">
        <button class="btn btn-group" style="background-color:#a330b5; color:white">Kitap Ödünç Ver</button>
        <input type="hidden" name="İslemDurum" value="False" />
    </div>
</form>

