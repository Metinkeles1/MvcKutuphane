@using MvcKutuphane.Models.Entity
@model List<TblDuyurular>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
    string renk = "";
}

<h2>Duyurular</h2>

<table class="table table-bordered">
    <tr>
        <th>Duyuru Id</th>
        <th>Kategori Ad</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>İçerik</th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Kategori == "Diğer")
        {
            renk = "bg-info text-white";
        }
        if (item.Kategori == "Yeni Kitap")
        {
            renk = "bg-warning text-white";
        }
        if (item.Kategori == "İletişim")
        {
            renk = "bg-danger text-white";
        }
        if (item.Kategori == "Kitapları Geciktirmeyin")
        {
            renk = "bg-success text-white";
        }


        <tr>
            <td>@item.Id</td>
            <td class="@renk">@item.Kategori</td>
            <td>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</td>
            <td><a href="/Duyuru/DuyuruSil/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Duyuru/DuyuruDetay/@item.Id" class="btn btn-default" style="background-color:skyblue">Detaylar</a></td>
        </tr>
    }

</table>
<a href="/Duyuru/YeniDuyuru" class="btn btn-primary">Yeni Duyuru Ekleme</a>

