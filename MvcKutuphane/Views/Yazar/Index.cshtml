@using MvcKutuphane.Models.Entity
@model List<TblYazar>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Detay</th>
        <th>Sil</th>        
        <th>Güncelle</th>        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Ad</td>
            <td>@item.Soyad</td>
            <td>@item.Detay</td>
            <td>@Html.ActionLink("Sil","YazarSil",new {id=item.ID}, new { @class = "btn btn-danger", onclick="return confirm('Silmek İstiyor Musunuz?')" })</td>
            <td><a href="/Yazar/YazarGetir/@item.ID" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Yazar/YazarEkle" class="btn btn-primary">Yeni Yazar Ekle</a>

