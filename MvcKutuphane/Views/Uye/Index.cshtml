@using MvcKutuphane.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<TblUyeler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<h2>Uyeler</h2>

<table class="table table-bordered">
    <tr>
        <th>Uye Id</th>
        <th>Uye Ad</th>
        <th>Uye Soyad</th>    
        <th>Uye Okul</th>
        <th>Sil</th>
        <th>Kitap Geçmişi</th>        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Ad</td>
            <td>@item.Soyad</td>      
            <td>@item.Okul</td>            
            <td><a href="/Uye/UyeSil/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Uye/UyeGetir/@item.Id" class="btn btn-warning">Güncelle</a></td>
            <td><a href="/Uye/UyeKitapGecmis/@item.Id" class="btn btn-default" style="background-color:lightseagreen">Kitap Geçmişi</a></td>
        </tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new {sayfa}))
<a href="/Uye/UyeEkle" class="btn btn-primary">Yeni Uye Ekleme</a>


